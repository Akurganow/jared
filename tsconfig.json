{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"src/*": ["src/*"],
			"store/*": ["src/store/*"],
			"i18n": ["src/i18n"],
			"react-dom": ["@hot-loader/react-dom"],
			"jest/*": [".jest/*"],
			"storybook/*": [".storybook/*"],
			"*": ["*"]
		},
		"jsx": "react-jsx",
		"module": "commonjs",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"preserveConstEnums": true,
		"removeComments": false,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "es6",
		"outDir": "build",
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"resolveJsonModule": true,
		"plugins": [
			{
				"name": "typescript-plugin-css-modules"
			}
		]
	},
	"include": [
		"./**/*"
	],
	"exclude": [
		"./node_modules",
		"./dist",
		"./.idea"
	]
}
